<resources>

    <style name="BaseLight" parent="@style/Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/colorPrimary</item>
    </style>

    <style name="BaseDark" parent="@style/Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorDarkPrimary</item>
        <item name="colorPrimaryDark">@color/colorDarkPrimaryDark</item>
        <item name="colorSecondary">@color/colorDarkAccent</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>

    <style name="AppTheme.Light" parent="BaseLight">
    </style>

    <style name="AppTheme.Dark" parent="BaseDark">
    </style>

    <style name="Base.Light.Dialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorAccent</item>
    </style>

    <style name="Base.Dark.Dialog" parent="Theme.MaterialComponents.Dialog">
        <item name="colorSecondary">@color/colorDarkAccent</item>
        <item name="colorPrimary">@color/colorDarkAccent</item>
    </style>

    <style name="Light.Dialog" parent="Base.Light.Dialog">
        <item name="colorBackgroundFloating">@color/colorPrimary</item>
        <item name="scrimBackground">@color/colorPrimary</item>
        <item name="android:colorBackground">@color/colorPrimary</item>
        <item name="android:popupBackground">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>

    <style name="Dark.Dialog" parent="Base.Dark.Dialog">
        <item name="colorBackgroundFloating">@color/colorDarkPrimary</item>
        <item name="scrimBackground">@color/colorDarkPrimary</item>
        <item name="android:colorBackground">@color/colorDarkPrimary</item>
        <item name="android:popupBackground">@color/colorDarkPrimary</item>
        <item name="android:windowBackground">@color/colorDarkPrimary</item>
    </style>

</resources>
